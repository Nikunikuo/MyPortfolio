---
// GHOSTS専用ナビゲーション
const navItems = [
  { label: 'HOME', href: '#top' },
  { label: 'NEWS', href: '#news' },
  { label: 'WORLD', href: '#world' },
  { label: 'MEMBERS', href: '#members' },
  { label: 'WORKS', href: '#works' },
];
---

<nav class="ghosts-nav">
  <div class="nav-container">
    <div class="nav-logo">
      <a href="/ghosts/">
        <img src="/images/GHOSTS/logo.webp" alt="GHOSTS" class="logo-image" />
      </a>
    </div>

    <div class="nav-menu">
      <ul class="nav-items">
        {navItems.map(item => (
          <li class="nav-item">
            <a href={item.href} class:list={['nav-link', { 'coming-soon': item.comingSoon }]}>
              <span class="nav-link-text">{item.label}</span>
              {item.comingSoon && <span class="coming-soon-badge">SOON</span>}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Back to niku.studio -->
    <div class="nav-back">
      <a href="/" class="back-link">
        <span>niku.studio</span>
      </a>
    </div>

    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-toggle" aria-label="Toggle menu">
      <span class="hamburger"></span>
    </button>
  </div>
</nav>

<script>
  // スムーズスクロール
  document.querySelectorAll('.nav-link[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      const href = this.getAttribute('href');
      if (href) {
        e.preventDefault();
        const target = document.querySelector(href === '#top' ? 'body' : href);
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      }
    });
  });

  // モバイルメニュートグル
  const toggle = document.querySelector('.mobile-menu-toggle');
  const nav = document.querySelector('.ghosts-nav');

  toggle?.addEventListener('click', () => {
    nav?.classList.toggle('mobile-open');
  });

  // メニュー外クリックで閉じる
  document.addEventListener('click', (e) => {
    if (!nav?.contains(e.target as Node)) {
      nav?.classList.remove('mobile-open');
    }
  });
</script>

<style>
  .ghosts-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: linear-gradient(180deg, rgba(15, 15, 30, 0.95) 0%, rgba(15, 15, 30, 0.85) 100%);
    backdrop-filter: blur(10px);
    border-bottom: 2px solid rgba(255, 8, 68, 0.3);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  /* Logo */
  .nav-logo a {
    text-decoration: none;
    display: flex;
    align-items: center;
  }

  .logo-image {
    height: 60px;
    width: auto;
    filter: drop-shadow(0 0 10px rgba(255, 8, 68, 0.5));
    transition: all 0.3s ease;
  }

  .logo-image:hover {
    filter: drop-shadow(0 0 15px rgba(39, 225, 255, 0.8));
    transform: scale(1.05);
  }

  /* Menu Items */
  .nav-menu {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .nav-items {
    display: flex;
    gap: 2.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: #B0B0B0;
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.15rem;
    text-transform: uppercase;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #FF0844, #27E1FF);
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link:hover .nav-link-text {
    color: #FF0844;
    text-shadow: 0 0 10px rgba(255, 8, 68, 0.5);
  }

  .nav-link.coming-soon {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  .coming-soon-badge {
    font-size: 0.65rem;
    padding: 0.2rem 0.5rem;
    background: rgba(255, 183, 0, 0.2);
    border: 1px solid #FFB700;
    border-radius: 0.25rem;
    color: #FFB700;
  }

  /* Back Link */
  .nav-back a {
    text-decoration: none;
    color: #666;
    font-size: 0.85rem;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .nav-back a:hover {
    color: #27E1FF;
  }

  /* Mobile Menu Toggle */
  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .hamburger {
    display: block;
    width: 25px;
    height: 2px;
    background: #FF0844;
    position: relative;
    transition: all 0.3s ease;
  }

  .hamburger::before,
  .hamburger::after {
    content: '';
    position: absolute;
    width: 25px;
    height: 2px;
    background: #FF0844;
    transition: all 0.3s ease;
  }

  .hamburger::before {
    top: -8px;
  }

  .hamburger::after {
    bottom: -8px;
  }

  /* Mobile Styles */
  @media (max-width: 900px) {
    .nav-container {
      padding: 1rem 1.5rem;
    }

    .mobile-menu-toggle {
      display: block;
    }

    .nav-menu {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: rgba(15, 15, 30, 0.98);
      backdrop-filter: blur(10px);
      border-bottom: 2px solid rgba(255, 8, 68, 0.3);
      padding: 1rem;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.3s ease;
    }

    .mobile-open .nav-menu {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    .nav-items {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-link::after {
      display: none;
    }

    .nav-back {
      display: none;
    }

    .mobile-open .hamburger {
      background: transparent;
    }

    .mobile-open .hamburger::before {
      transform: rotate(45deg);
      top: 0;
    }

    .mobile-open .hamburger::after {
      transform: rotate(-45deg);
      bottom: 0;
    }
  }

  @media (max-width: 600px) {
    .logo-image {
      height: 44px;
    }

    .nav-container {
      padding: 1rem;
    }
  }
</style>
