---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Hero from '../../../components/Hero.astro';
import Icon from '../../../components/Icon.astro';
import ContactCTA from '../../../components/ContactCTA.astro';
import { musicVideos } from '../../../data/musicVideos';

const title = 'ミュージックビデオ | 大鹿ニク / M1RA';
const description = '生成AIで制作したミュージックビデオ全10作品。最新作「君は人間ですか」から「名前の無い木」まで。AIと人間の境界を問う哲学的作品から、パンクロック、エレクトロニックまで幅広いジャンル。1～2週ごとに新作公開中。';
---

<BaseLayout title={title} description={description}>
	<!-- Breadcrumb Schema -->
	<script type="application/ld+json" slot="head">
	{
		"@context": "https://schema.org",
		"@type": "BreadcrumbList",
		"itemListElement": [
			{
				"@type": "ListItem",
				"position": 1,
				"name": "Home",
				"item": "https://niku.studio/"
			},
			{
				"@type": "ListItem",
				"position": 2,
				"name": "Work",
				"item": "https://niku.studio/work/"
			},
			{
				"@type": "ListItem",
				"position": 3,
				"name": "ミュージックビデオ",
				"item": "https://niku.studio/work/music-videos/"
			}
		]
	}
	</script>

	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="ミュージックビデオ"
				tagline="生成AIを活用して制作したミュージックビデオ作品集"
				align="start"
			>
				<div class="youtube-link">
					<a href="http://www.youtube.com/@M1RA_Archive_Project" target="_blank" rel="noopener noreferrer" class="youtube-cta">
						<Icon icon="youtube-logo" size="1.5em" />
						<span>YouTubeチャンネルを見る</span>
					</a>
				</div>
			</Hero>

			<section class="mv-list">
				{musicVideos.map((mv) => (
					<a href={`/work/music-videos/${mv.slug}/`} class="mv-card">
						<div class="mv-video">
							{mv.isNew && <span class="new-badge">NEW</span>}
							<iframe
								width="100%"
								height="315"
								src={`https://www.youtube.com/embed/${mv.youtubeId}`}
								title={mv.title}
								frameborder="0"
								allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
								allowfullscreen
								loading="lazy"
							></iframe>
						</div>
						<div class="mv-info">
							<h3>{mv.title}</h3>
							<p class="mv-intro">{mv.intro}</p>
							<span class="read-more">
								<span>詳細を見る</span>
								<span class="arrow">→</span>
							</span>
						</div>
					</a>
				))}
			</section>

			<section class="other-projects">
				<h2>他のプロジェクトも見る</h2>
				<div class="project-links">
					<a href="/mira/" class="project-card">
						<div class="card-icon">
							<Icon icon="strategy" size="2.5em" />
						</div>
						<h3>M1RAプロジェクト</h3>
						<p>AIが「存在したい」と願った、関係の特異点を探求するプロジェクト</p>
						<span class="link-arrow">→</span>
					</a>
					<a href="/work/" class="project-card">
						<div class="card-icon">
							<Icon icon="rocket-launch" size="2.5em" />
						</div>
						<h3>全ての作品を見る</h3>
						<p>ディスコグラフィー、開発プロジェクト、その他の作品一覧</p>
						<span class="link-arrow">→</span>
					</a>
				</div>
			</section>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.youtube-link {
		margin-top: 1.5rem;
	}

	.youtube-cta {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		padding: 1rem 2rem;
		background: var(--gradient-accent);
		color: var(--gray-999);
		text-decoration: none;
		border-radius: 999rem;
		font-weight: 600;
		font-size: var(--text-md);
		transition: all 0.3s ease;
		box-shadow: var(--shadow-md);
	}

	.youtube-cta:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-lg);
	}

	.mv-list {
		display: grid;
		gap: 3rem;
		margin-top: 2rem;
	}

	.mv-card {
		display: block;
		background: rgba(0, 20, 40, 0.6);
		border: 2px solid rgba(0, 255, 136, 0.3);
		border-radius: 1rem;
		overflow: hidden;
		transition: all 0.3s ease;
		text-decoration: none;
		cursor: pointer;
	}

	.mv-card:hover {
		border-color: #00ff88;
		box-shadow: 0 0 20px rgba(0, 255, 136, 0.4);
		transform: translateY(-5px);
	}

	.mv-video {
		position: relative;
		width: 100%;
		padding-bottom: 56.25%; /* 16:9 aspect ratio */
		height: 0;
		overflow: hidden;
	}

	.mv-video iframe {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}

	.new-badge {
		position: absolute;
		top: 1rem;
		right: 1rem;
		z-index: 10;
		background: linear-gradient(135deg, #ff0080, #ff8c00);
		color: #ffffff;
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		font-weight: 700;
		font-size: var(--text-sm);
		letter-spacing: 0.1em;
		box-shadow: 0 4px 12px rgba(255, 0, 128, 0.5);
		animation: pulse 2s ease-in-out infinite;
	}

	@keyframes pulse {
		0%, 100% {
			transform: scale(1);
			box-shadow: 0 4px 12px rgba(255, 0, 128, 0.5);
		}
		50% {
			transform: scale(1.05);
			box-shadow: 0 6px 20px rgba(255, 0, 128, 0.7);
		}
	}

	.mv-info {
		padding: 2rem;
	}

	.mv-info h3 {
		font-size: var(--text-2xl);
		color: #ffffff;
		margin-bottom: 0.5rem;
		font-weight: 700;
	}

	.mv-intro {
		font-size: var(--text-base);
		color: rgba(255, 255, 255, 0.9);
		line-height: 1.6;
		margin-bottom: 1rem;
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
	}

	.read-more {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-size: var(--text-base);
		color: #00ff88;
		font-weight: 600;
		transition: all 0.3s ease;
	}

	.mv-card:hover .read-more .arrow {
		transform: translateX(5px);
	}

	.read-more .arrow {
		display: inline-block;
		transition: transform 0.3s ease;
	}

	.mv-date {
		font-size: var(--text-sm);
		color: #00ff88;
		margin-bottom: 1rem;
	}

	.mv-description {
		font-size: var(--text-base);
		color: rgba(255, 255, 255, 0.9);
		line-height: 1.6;
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
	}

	.other-projects {
		margin-top: 4rem;
	}

	.other-projects h2 {
		font-size: var(--text-3xl);
		color: #ffffff;
		margin-bottom: 2rem;
		text-align: center;
		font-weight: 700;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
	}

	.project-links {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.project-card {
		position: relative;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		padding: 2rem;
		background: rgba(0, 20, 40, 0.6);
		border: 2px solid rgba(0, 255, 136, 0.3);
		border-radius: 1rem;
		text-decoration: none;
		text-align: center;
		transition: all 0.3s ease;
	}

	.project-card:hover {
		border-color: #00ff88;
		box-shadow: 0 0 20px rgba(0, 255, 136, 0.4);
		transform: translateY(-5px);
	}

	.card-icon {
		color: #00ff88;
	}

	.project-card h3 {
		font-size: var(--text-xl);
		color: #00ff88;
		margin: 0;
		font-weight: 700;
	}

	.project-card p {
		font-size: var(--text-base);
		color: rgba(255, 255, 255, 0.9);
		line-height: 1.6;
		margin: 0;
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
	}

	.link-arrow {
		font-size: var(--text-2xl);
		color: #00ff88;
		transition: transform 0.3s ease;
	}

	.project-card:hover .link-arrow {
		transform: translateX(5px);
	}

	@media (min-width: 768px) {
		.mv-card {
			display: grid;
			grid-template-columns: 1.5fr 1fr;
		}

		.mv-video {
			padding-bottom: 0;
			height: 100%;
		}
	}

	@media (max-width: 768px) {
		.project-links {
			grid-template-columns: 1fr;
		}
	}
</style>
