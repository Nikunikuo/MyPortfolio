<script>
  // NEWSスクロール機能
  const newsWrapper = document.getElementById("newsScrollWrapper");
  const scrollLeftBtn = document.getElementById("newsScrollLeft");
  const scrollRightBtn = document.getElementById("newsScrollRight");

  if (newsWrapper && scrollLeftBtn && scrollRightBtn) {
    // ボタンクリックでスクロール
    const scrollAmount = 220; // カード幅 + gap

    scrollRightBtn.addEventListener("click", () => {
      newsWrapper.scrollBy({ left: scrollAmount, behavior: "smooth" });
    });

    scrollLeftBtn.addEventListener("click", () => {
      newsWrapper.scrollBy({ left: -scrollAmount, behavior: "smooth" });
    });

    // ドラッグスクロール
    let isDown = false;
    let startX;
    let scrollLeft;

    newsWrapper.addEventListener("mousedown", (e) => {
      isDown = true;
      newsWrapper.classList.add("dragging");
      startX = e.pageX - newsWrapper.offsetLeft;
      scrollLeft = newsWrapper.scrollLeft;
    });

    newsWrapper.addEventListener("mouseleave", () => {
      isDown = false;
      newsWrapper.classList.remove("dragging");
    });

    newsWrapper.addEventListener("mouseup", () => {
      isDown = false;
      newsWrapper.classList.remove("dragging");
    });

    newsWrapper.addEventListener("mousemove", (e) => {
      if (!isDown) return;
      e.preventDefault();
      const x = e.pageX - newsWrapper.offsetLeft;
      const walk = (x - startX) * 2;
      newsWrapper.scrollLeft = scrollLeft - walk;
    });

    // ボタンの有効/無効を更新
    function updateButtons() {
      const maxScroll = newsWrapper.scrollWidth - newsWrapper.clientWidth;
      scrollLeftBtn.disabled = newsWrapper.scrollLeft <= 0;
      scrollRightBtn.disabled = newsWrapper.scrollLeft >= maxScroll - 1;
    }

    newsWrapper.addEventListener("scroll", updateButtons);
    window.addEventListener("resize", updateButtons);
    updateButtons();
  }
</script>
