<style>
  .ghosts-container {
    width: 100%;
    min-height: 100vh;
    background: #0a0a0a;
    color: #e0e0e0;
    overflow-x: hidden;
  }

  /* Boot Screen */
  .boot-screen {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    position: relative;
    background: linear-gradient(180deg, #0a0a0a 0%, #151515 100%);
  }

  .terminal-overlay {
    position: absolute;
    top: 28%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    font-family: "Courier New", monospace;
    font-size: clamp(0.7rem, 1.2vw, 1rem);
    opacity: 0;
    animation: fadeIn 1s ease-out 2.5s forwards;
    text-align: center;
    z-index: 10;
  }

  .terminal-line {
    margin: 0.5rem 0;
    opacity: 0;
    animation: terminalLine 0.5s ease-out forwards;
    white-space: nowrap;
  }

  .terminal-line.delay-1 {
    animation-delay: 3s;
  }
  .terminal-line.delay-1 span:not(.prompt) {
    color: #000000;
  }
  .terminal-line.delay-2 {
    animation-delay: 3.5s;
  }
  .terminal-line.delay-3 {
    animation-delay: 4s;
  }

  .prompt {
    color: #27e1ff;
    margin-right: 0.5rem;
  }

  .warning {
    color: #ffb700;
  }

  .error {
    color: #ff0844;
  }

  .cursor {
    animation: blink 1s infinite;
  }

  /* Main Poster */
  .logo-container {
    text-align: center;
    opacity: 0;
    animation: fadeIn 1s ease-out 2s forwards;
    width: 100%;
    margin: 0 auto;
    position: relative;
  }

  .main-poster {
    max-width: 100%;
    width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
    filter: drop-shadow(0 0 30px rgba(255, 8, 68, 0.5));
    transition: all 0.3s ease;
  }

  .main-poster:hover {
    filter: drop-shadow(0 0 50px rgba(39, 225, 255, 0.6));
    transform: scale(1.02);
  }

  /* Glitch Effect */
  .glitch {
    position: relative;
    display: inline-block;
  }

  .glitch::before,
  .glitch::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0.8;
  }

  .glitch::before {
    animation: glitch-1 0.3s infinite;
    color: #ff0844;
    z-index: -1;
  }

  .glitch::after {
    animation: glitch-2 0.3s infinite;
    color: #27e1ff;
    z-index: -2;
  }

  /* Random Character Glitch */
  .glitch-char {
    display: inline-block;
    position: relative;
    animation: charGlitch 3s ease-in-out infinite;
  }

  .glitch-char:nth-child(1) {
