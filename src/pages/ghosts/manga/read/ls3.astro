---
import MangaViewer from "../../../../components/MangaViewer.astro";

const images = Array.from(
    { length: 13 },
    (_, i) => `/images/GHOSTS/comics/LS3/${String(i + 1)}.webp`,
);

const title = "GHOSTS - EP.3 鉄の魔女とスープの香り";
---

<!doctype html>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta name="robots" content="noindex" />
        <!-- ビューアページは検索インデックス不要かも -->
    </head>
    <body>
        <MangaViewer images={images} title={title} backLink="/ghosts/manga/" />
    </body>
</html>

<style>
    body {
        margin: 0;
        padding: 0;
        background: #0f0f1e;
    }
</style>
